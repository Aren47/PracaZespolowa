import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Task Manager', // Tytuł aplikacji
      theme: ThemeData(
        primarySwatch: Colors.blue, // Kolor przewodni aplikacji
      ),
      home: TaskManager(), // Ekran główny
    );
  }
}

class Task {
  String name;   // Nazwa zadania
  String status; // Status zadania

  Task(this.name, this.status); // Konstruktor dla obiektu Task
}

class TaskManager extends StatefulWidget {
  @override
  _TaskManagerState createState() => _TaskManagerState();
}

class _TaskManagerState extends State<TaskManager> {
  List<Task> tasks = []; // Lista zadan
  TextEditingController taskController = TextEditingController(); // Kontroler pola tekstowego
  int editingIndex = -1; // Indeks zadania podczas edycji (domyślnie brak edycji)

  void addTask() {
    setState(() {
      String newTaskName = taskController.text;
      if (newTaskName.isNotEmpty) {
        tasks.add(Task(newTaskName, 'Nowy')); // Dodaj nowe zadanie do listy
        taskController.clear(); // Wyczyść pole tekstowe po dodaniu zadania
      }
    });
  }

  void editTask(int index) {
    setState(() {
      editingIndex = index; // Rozpocznij edycję zadania o określonym indeksie
    });
  }

  void saveEditedTask(int index) {
    setState(() {
      editingIndex = -1; // Zakończ edycję zadania
    });
  }

  void removeTask(int index) {
    setState(() {
      tasks.removeAt(index); // Usuń zadanie na podstawie indeksu
      if (editingIndex == index) {
        editingIndex = -1; // Jeśli edytowane zadanie jest usuwane, zakończ edycję
      }
    });
  }

  void changeStatus(int index, String newStatus) {
    setState(() {
      tasks[index].status = newStatus; // Zmień status zadania
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Task Manager'), // Tytuł paska nawigacyjnego
      ),
      body: Column(
        children: <Widget>[
          Padding(
            padding: const EdgeInsets.all(10.0),
            child: TextField(
              controller: taskController,
              decoration: InputDecoration(labelText: 'Dodaj nowe zadanie'), // Pole tekstowe do dodawania zadań
            ),
          ),
          ElevatedButton(
            onPressed: addTask, // Przycisk "Dodaj zadanie" wywołuje funkcję addTask
            child: Text('Dodaj zadanie'),
          ),
          Expanded(
            child: ListView.builder(
              itemCount: tasks.length,
              itemBuilder: (context, index) {
                return ListTile(
                  title: Text('Zadanie: ${tasks[index].name}\nStatus: ${tasks[index].status}'), // Wyświetlanie nazwy zadania i statusu
                  trailing: Row(
                    mainAxisSize: MainAxisSize.min,
                    children: [
                      DropdownButton<String>(
                        value: tasks[index].status,
                        items: ['Nowy', 'W trakcie', 'Zaakceptowany', 'Ukończony']
                            .map((String status) {
                          return DropdownMenuItem<String>(
                            value: status,
                            child: Text(status),
                          );
                        }).toList(),
                        onChanged: (String newStatus) {
                          changeStatus(index, newStatus); // Zmiana statusu zadania
                        },
                      ),
                      IconButton(
                        icon: Icon(Icons.edit),
                        onPressed: () => editTask(index), // Rozpoczęcie edycji zadania
                      ),
                      IconButton(
                        icon: Icon(Icons.delete),
                        onPressed: () => removeTask(index), // Usunięcie zadania
                      ),
                    ],
                  ),
                );
              },
            ),
          ),
        ],
      ),
    );
  }
}
